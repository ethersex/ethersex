#!/bin/sh
AWK=awk
[ -x /usr/bin/gawk ] && AWK=/usr/bin/gawk

$AWK --version 2>/dev/null | grep -q GNU || {
  echo "$0: $AWK is not a GNU Awk."
  exit 1
}

main_menu() {
  dialog --menu "Named Pins" 0 50 0 \
    ADD  'Add an Pin' \
    LIST 'List Pins' \
    EDIT 'Edit an Pin' \
    DEL  'Delete an Pin' 2> $1
}

select_menu() {
  $AWK '{ a = a " \"" gensub("\"", "\\\\\"", $0) "\" \"\""}
      END { system("dialog --menu \"Select Pin\" 0 50 0" a) }
      ' < config 2> $1
}

edit_action() {
  if [ -z "`cat $1`" ]; then
    echo "PA0 1 1 PIN0" > $1
  fi
  pin=`$AWK '{print $1}' < $1`
  input=`$AWK '{print $2}' < $1`
  active_high=`$AWK '{print $3}' < $1`
  name=`$AWK '{print $4}' < $1`
  
  _temp=`mktemp`

  dialog --form "Named Pin Configuration"  0 50 6 \
    "Pin (e.g. PB3)" 1  1 "$pin"         1 17   4 3 \
    "Input"          2  1 "$input"       2 17   2 1 \
    "Active High"    3  1 "$active_high" 3 17   2 1 \
    "Name"           4  1 "$name"        4 17   101 100 2>$_temp

  if [ -n "`cat $_temp`" ]; then
    sed 's/$/ /' < $_temp  | tr -d "\n" | sed 's/ $/\n/' > $1
  fi
  rm  -f $_temp
}

rm_line() {
  fgrep  -xv "`cat $1`" < $2
}

test_path() {
  IFS=":"
  
  for check_path in $PATH; do  
     if [ -e "$check_path/$1" ]; then
       good="1"
     fi  
  done
  IFS=""

  if [ -z "$good" ]; then
    echo "Error: $1 not found in your path, can't continue"
    exit -1
  fi
}

if [ -d named_pin ]; then
  cd named_pin
fi

# Test for essentiel programs
test_path fgrep

menu=`mktemp`
main_menu $menu

while [ -n "`cat $menu`" ]; do
  case "`cat $menu`" in
    ADD)
      tmp=`mktemp`
      edit_action $tmp
      if [ -n "`cat $tmp`" ]; then
        cat $tmp >> config
      fi
      rm -f $tmp
      ;;
    LIST)
      select_menu /dev/null
      ;;
    EDIT)
      choose=`mktemp`
      tmp=`mktemp`
      tmp2=`mktemp`
      select_menu $choose
      if [ -n "`cat $choose`" ]; then
        cp $choose $tmp
        edit_action $tmp
        if [ -n "`cat $choose`" ]; then
          rm_line $choose config > $tmp2
          cat $tmp2 $tmp > config
        fi
      fi
      rm -f $tmp $tmp2 $choose
      ;;
    DEL)
      choose=`mktemp`
      tmp=`mktemp`
      select_menu $choose
      if [ -n "`cat $choose`" ]; then
        rm_line $choose config > $tmp
        cat $tmp > config
      fi
      rm -f $tmp
      rm -f $choose
      ;;
  esac
  main_menu $menu
done
rm -f $menu
exit

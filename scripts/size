#!/bin/bash
j=0
maxper=30
for i in ".text" ".data" ".bss"
do
	val[$j]=$(avr-size -A $1 | grep $i | sed -e "s/^$i *//g" | cut -d " " -f1)
	let j=$j+1
done

IMAGESIZE=$(ls -l $1.bin | awk '{ print $5 }')

# ???
# if [ x$OSTYPE = x"darwin10.0" ] || [ x$OSTYPE = x"darwin11.0" ] || [ x$OSTYPE = x"FreeBSD" ] ; then
	FLASHSIZE=$(perl -e "print 0x$(echo "#include <avr/io.h>\nFLASHEND" | avr-cpp -mmcu=$2 | tail -n 1 |cut -c3-);")
#	FLASHSIZE=$(perl -e "print 0x$(echo -e "#include <avr/io.h>\nFLASHEND" | avr-cpp -mmcu=$2 | tail -n 1 |cut -c3-);")

FLASHSIZE=$[$FLASHSIZE + 1]
PERCENT=$(perl -e "printf('%.2f', $IMAGESIZE.0 / $FLASHSIZE.0 *100.0);" )
PER=$(perl -e "printf('%i', $IMAGESIZE / $FLASHSIZE *$maxper);" )

echo "Imagesize: $IMAGESIZE/$FLASHSIZE bytes (${PERCENT}%)"
if [ $IMAGESIZE -gt $FLASHSIZE ];then
  echo "  WARNING! Your Image is too big for the selected chip. WARNING!"
  echo ""
  exit 1
else
	/bin/echo -n "  ["
	# echo -n "  ["
	COUNTER=0
	while [  $COUNTER -lt $maxper ]; do
		if [ $COUNTER -lt $PER ]; then
			/bin/echo -n "="
			#echo -n "="
		else
			/bin/echo -n "-"
			#echo -n "-"
		fi
		let COUNTER=COUNTER+1
	done
	echo "]"
fi
echo ""
	echo "Program (.text + .data)\t: $(perl -e "print ${val[0]}+${val[1]};") bytes"
	echo "Data (.data + .bss)\t:  $(perl -e "print ${val[2]}+${val[1]};") bytes"
	# echo -e "Program (.text + .data)\t: $(perl -e "print ${val[0]}+${val[1]};") bytes"
	# echo -e "Data (.data + .bss)\t:  $(perl -e "print ${val[2]}+${val[1]};") bytes"
echo ""
